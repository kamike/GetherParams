<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res/com.pursuege.gether.android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginBottom="1px"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/test_progress_load_tv"
        style="@style/txt_normal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/padding_left_right"
        android:text="hao123" />

    <com.pursuege.gether.android.ui.view.BlueProgressView
        android:id="@+id/test_progress_load_bp"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_weight="3" />

    <ImageView
        android:id="@+id/test_progress_load_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_left_right"
        android:src="@drawable/icon_task_loading" />

</LinearLayout>

