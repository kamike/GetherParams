<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pursuege.gether.android.ui.task.TaskFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/task_topbar_tablayout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/color_white"
        app:tabIndicatorColor="@color/color_them"
        app:tabTextColor="@color/color_text_normal" />

    <android.support.v4.view.ViewPager
        android:id="@+id/task_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
