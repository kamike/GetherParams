<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f00</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txt_normal_hint">
        <item name="android:textColor">@color/color_text_hint</item>
        <item name="android:textSize">@dimen/size_txt_normal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txt_normal_hint_small">
        <item name="android:textColor">@color/color_text_hint</item>
        <item name="android:textSize">@dimen/size_txt_small</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="txt_normal">
        <item name="android:textColor">@color/color_text_normal</item>
        <item name="android:textSize">@dimen/size_txt_normal</item>
        <item name="android:gravity">left|center_vertical</item>

    </style>

    <style name="txt_title_white">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/size_txt_title</item>
        <item name="android:gravity">left|center_vertical</item>

    </style>

    <style name="dialog_all_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
